  require "pathname"

  find_app_dir = Proc.new do
    staged_dir = @cask.respond_to?(:staged_path) ? @cask.staged_path : @cask.destination_path
    Pathname.glob("#{staged_dir.to_s}/Xcode*.app").first
  end

  version <%= cask_version.dump %>
  sha256 :no_check

  url <%= xcode_url.dump %>
  name "Xcode"
  homepage "https://developer.apple.com/xcode/"

  postflight do
    xcode_app_dir = instance_exec(&find_app_dir)

    next \
      if !xcode_app_dir

    Hbc.appdir.mkpath

    FileUtils.symlink(xcode_app_dir, Hbc.appdir + xcode_app_dir.basename)
  end

  uninstall_preflight do
    xcode_app_dir = instance_exec(&find_app_dir)

    next \
      if !xcode_app_dir

    FileUtils.rm(Hbc.appdir + xcode_app_dir.basename)
  end
end
