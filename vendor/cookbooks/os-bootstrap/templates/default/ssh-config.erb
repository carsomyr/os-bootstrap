# GitHub

Host github.com github
    HostName github.com
    User git
    # Force SSH to offer our personal key instead of another potentially valid
    # one held by `ssh-agent`.
    IdentitiesOnly yes

# Private networks

Host 192.168.*.*
    StrictHostKeyChecking no
    UserKnownHostsFile /dev/null
    LogLevel QUIET

# Any host

Host *
    CheckHostIP no
    GlobalKnownHostsFile ~/.ssh/global_known_hosts
    HashKnownHosts no
    NoHostAuthenticationForLocalhost no
